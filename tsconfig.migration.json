{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"alwaysStrict": true,
		"strict": true,
		"noEmitOnError": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "dist",
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"strictNullChecks": true,
		"noImplicitAny": false,
		"plugins": [],
		"types": ["node", "src/types/env.d.ts"]
	},
	"include": ["migration"],
	"exclude": ["node_modules", "dist", "tests"]
}