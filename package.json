{
	"private": true,
	"name": "node-api-boilerplate",
	"version": "0.0.0",
	"scripts": {
		"docker:dev": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.dev.yml up\"",
		"docker:dev-down": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.dev.yml down\"",
		"docker:dev-rebuild": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build --no-deps\"",
		"docker:dev-rebuild-db": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build --force-recreate database --no-deps\"",
		"docker:dev-rebuild-migration": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build --force-recreate migration --no-deps\"",
		"docker:ci": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.ci.yml up --build --no-deps -d\"",
		"docker:ci-down": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.ci.yml down\"",
		"docker:prod": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d\"",
		"docker:prod-down": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.prod.yml down\"",
		"docker:prod-rebuild": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build --no-deps -d\"",
		"docker:prod-rebuild-no-detach": "dotenv \"docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build --no-deps\"",
		"build": "rimraf ./dist && tsc && node scripts/post-build.js",
		"test": "jest ./",
		"dev": "nodemon --legacy-watch --watch \"./src/**\" --ext \"ts,json\" --exec \"npm run build-and-run\"",
		"prod": "pm2-runtime dist/src/main.js",
		"build-and-run": "npm run build && node ./dist/src/main.js",
		"build-and-prod": "npm run build && npm run prod",
		"migrate:add": "surrealx migrate add",
		"migrate:up": "dotenv cross-env-shell \"surrealx migrate run --ns $DB_NAMESPACE --user $DB_USER --pass $DB_PASSWORD --db $DB_DATABASE --url $DB_URL\"",
		"db:setup": "node scripts/setup-db.js",
		"generate-types": "dotenv cross-env-shell \"surrealx generate --output ./src/types/gen.ts --ns $DB_NAMESPACE --user $DB_USER --pass $DB_PASSWORD --db $DB_DATABASE --url $DB_URL\""
	},
	"dependencies": {
		"@aws-sdk/client-ses": "^3.306.0",
		"argon2": "^0.30.3",
		"axios": "^1.3.3",
		"cross-env": "^7.0.3",
		"dayjs": "^1.11.7",
		"db-migrate-pg": "^1.2.2",
		"form-data": "^4.0.0",
		"formidable": "^2.1.1",
		"jsonwebtoken": "^9.0.0",
		"koa": "^2.14.1",
		"koa-body": "^6.0.1",
		"koa-json": "^2.0.2",
		"koa-logger": "^3.2.1",
		"kysely": "^0.24.2",
		"kysely-surrealdb": "^0.7.4",
		"nanoid": "2.1.11",
		"pg": "^8.9.0",
		"redis": "^4.6.5",
		"surrealdb.js": "^0.8.2",
		"surrealx": "^0.1.10",
		"tslib": "^2.5.0",
		"undici": "^5.22.1",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@rollup/plugin-alias": "^4.0.3",
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/dotenv": "^8.2.0",
		"@types/dotenv-parse-variables": "^2.0.1",
		"@types/formidable": "^2.0.5",
		"@types/jest": "^29.4.0",
		"@types/koa": "^2.13.5",
		"@types/nanoid": "^3.0.0",
		"@types/node": "^18.14.0",
		"@types/pg": "^8.6.6",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"concurrently": "^7.6.0",
		"db-migrate": "^0.11.13",
		"dotenv": "^16.0.3",
		"dotenv-parse-variables": "^2.0.0",
		"esbuild": "^0.17.10",
		"eslint": "^8.34.0",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"lint-staged": "^13.1.2",
		"nodemon": "^2.0.20",
		"pm2": "^5.2.2",
		"rimraf": "^4.1.2",
		"rollup": "^3.17.3",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vite": "^4.1.4"
	}
}