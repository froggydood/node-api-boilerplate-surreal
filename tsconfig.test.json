{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"alwaysStrict": true,
		"strict": true,
		"noEmitOnError": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "dist",
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"strictNullChecks": true,
		"noImplicitAny": false,
		"types": ["node", "jest"]
	},
	"include": [
		"src/**/*",
		"tests",
		"tests/**/*",
		"../shared/helpers/theme.helper.ts"
	],
	"exclude": ["node_modules", "dist"]
}